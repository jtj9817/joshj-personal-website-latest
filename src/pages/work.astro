---
import { getCollection } from "astro:content"

import BaseLayout from "../layouts/BaseLayout.astro"

import ContactCTA from "../components/ContactCTA.astro"
import PortfolioPreview from "../components/PortfolioPreview.astro"
import Hero from "../components/Hero.astro"
import Grid from "../components/Grid.astro"

const allProjects = (await getCollection("work")).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
)

const personalProjects = allProjects.filter(
  (project) => project.data.category === "Personal"
)

const workProjects = allProjects.filter(
  (project) => project.data.category === "Work"
)
---

<BaseLayout
  title="My Work | Joshua Jadulco"
  description="Learn about Joshua Jadulco's most recent projects"
>
  <div class="stack gap-20">
    <main class="wrapper stack gap-20">
      <Hero
        title="My Work"
        tagline="Here are my most recent works."
        align="start"
      />

      <section class="stack gap-8">
        <div class="stack gap-2">
          <h2 class="text-4xl">Personal</h2>
          <p class="text-lg text-gray-300">Personal projects and side work</p>
        </div>
        <Grid variant="offset">
          {
            personalProjects.map((project) => (
              <li>
                <PortfolioPreview project={project} />
              </li>
            ))
          }
        </Grid>
      </section>

      <section class="stack gap-8">
        <div class="stack gap-2">
          <h2 class="text-4xl">Work</h2>
          <p class="text-lg text-gray-300">Professional and client projects</p>
        </div>
        <Grid variant="offset">
          {
            workProjects.map((project) => (
              <li>
                <PortfolioPreview project={project} />
              </li>
            ))
          }
        </Grid>
      </section>
    </main>
    <ContactCTA />
  </div>
</BaseLayout>
