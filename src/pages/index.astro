---
import { getCollection } from 'astro:content';

// Layout import â€” provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro';

// Component Imports
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import Pill from '../components/Pill.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';

// Page section components
import Skills from '../components/Skills.astro';

// Content Fetching: List four most recent work projects
const projects = (await getCollection('work'))
	.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
	.slice(0, 4);

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<BaseLayout>
	<div class="stack gap-20 lg:gap-48">
		<div class="wrapper stack gap-8 lg:gap-20">
			<div class="hero-with-divider">
				<header class="hero">
					<Hero
						title="Hello, my name is Joshua Jadulco"
						tagline="I'm a Full Stack Web Developer with a passion for developing effective website solutions with user-friendly experience and designs."
						align="start"
					>
					</Hero>
				</header>

				<div class="cyberpunk-divider">
					<div class="divider-line"></div>
					<div class="divider-node"></div>
					<div class="divider-line"></div>
				</div>

				<Skills />
			</div>
		</div>
	</div>
</BaseLayout>

<style>
	.hero-with-divider {
		display: flex;
		flex-direction: column;
		gap: 4rem;
		position: relative;
		padding: 2rem 0;
	}

	.cyberpunk-divider {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		width: 100%;
		padding: 1rem 0;
	}

	.divider-line {
		flex: 1;
		height: 2px;
		background: linear-gradient(
			90deg,
			transparent 0%,
			var(--accent-regular) 20%,
			var(--accent-light) 50%,
			var(--accent-regular) 80%,
			transparent 100%
		);
		position: relative;
		overflow: hidden;
	}

	.divider-line::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 50%;
		height: 100%;
		background: linear-gradient(
			90deg,
			transparent 0%,
			rgba(255, 255, 255, 0.8) 50%,
			transparent 100%
		);
		animation: scan 3s linear infinite;
	}

	.divider-node {
		width: 16px;
		height: 16px;
		background: var(--accent-regular);
		border: 2px solid var(--accent-light);
		box-shadow: 
			0 0 10px var(--accent-regular),
			0 0 20px var(--accent-regular),
			inset 0 0 5px var(--accent-light);
		position: relative;
		transform: rotate(45deg);
	}

	.divider-node::before,
	.divider-node::after {
		content: '';
		position: absolute;
		background: var(--accent-light);
	}

	.divider-node::before {
		width: 6px;
		height: 6px;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
	}

	.divider-node::after {
		width: 2px;
		height: 2px;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		background: var(--gray-999);
	}

	@keyframes scan {
		0% {
			left: -100%;
		}
		100% {
			left: 200%;
		}
	}

	.hero {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 2rem;
		padding: 1rem 0;
	}

	.roles {
		display: none;
	}

	.hero img {
		aspect-ratio: 5 / 4;
		object-fit: cover;
		object-position: top;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

	@media (min-width: 50em) {
		.hero-with-divider {
			display: grid;
			grid-template-columns: 1fr auto 1fr;
			align-items: start;
			gap: 4rem;
			padding: 3rem 2.5rem;
		}

		.cyberpunk-divider {
			flex-direction: column;
			width: auto;
			height: 100%;
			min-height: 200px;
			padding: 0 1rem;
			align-self: stretch;
		}

		.divider-line {
			flex: 1;
			width: 2px;
			height: auto;
			background: linear-gradient(
				180deg,
				transparent 0%,
				var(--accent-regular) 20%,
				var(--accent-light) 50%,
				var(--accent-regular) 80%,
				transparent 100%
			);
		}

		.divider-line::before {
			background: linear-gradient(
				180deg,
				transparent 0%,
				rgba(255, 255, 255, 0.8) 50%,
				transparent 100%
			);
			animation: scan-vertical 3s linear infinite;
			left: 0;
			top: -100%;
			width: 100%;
			height: 50%;
		}

		@keyframes scan-vertical {
			0% {
				top: -100%;
			}
			100% {
				top: 200%;
			}
		}

		.hero {
			display: flex;
			padding-inline: 0;
		}

		.roles {
			margin-top: 0.5rem;
			display: flex;
			gap: 0.5rem;
		}

		.hero img {
			aspect-ratio: 3 / 4;
			border-radius: 4.5rem;
			object-fit: cover;
		}
	}

	/* ====================================================== */

	.section {
		display: grid;
		gap: 2rem;
	}

	.with-background {
		position: relative;
	}

	.with-background::before {
		--hero-bg: var(--bg-image-subtle-2);

		content: '';
		position: absolute;
		pointer-events: none;
		left: 50%;
		width: 100vw;
		aspect-ratio: calc(2.25 / var(--bg-scale));
		top: 0;
		transform: translateY(-75%) translateX(-50%);
		background: url('/assets/backgrounds/noise.png') top center/220px repeat,
			var(--hero-bg) center center / var(--bg-gradient-size) no-repeat, var(--gray-999);
		background-blend-mode: overlay, normal, normal, normal;
		mix-blend-mode: var(--bg-blend-mode);
		z-index: -1;
	}

	.with-background.bg-variant::before {
		--hero-bg: var(--bg-image-subtle-1);
	}

	.section-header {
		justify-self: center;
		text-align: center;
		max-width: 50ch;
		font-size: var(--text-md);
		color: var(--gray-300);
	}

	.section-header h3 {
		font-size: var(--text-2xl);
	}

	@media (min-width: 50em) {
		.section {
			grid-template-columns: repeat(4, 1fr);
			grid-template-areas: 'header header header header' 'gallery gallery gallery gallery';
			gap: 5rem;
		}

		.section.with-cta {
			grid-template-areas: 'header header header cta' 'gallery gallery gallery gallery';
		}

		.section-header {
			grid-area: header;
			font-size: var(--text-lg);
		}

		.section-header h3 {
			font-size: var(--text-4xl);
		}

		.with-cta .section-header {
			justify-self: flex-start;
			text-align: left;
		}

		.gallery {
			grid-area: gallery;
		}

		.cta {
			grid-area: cta;
		}
	}

	/* ====================================================== */
</style>
